<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="ZdryZdrylbb">
	
	<typeAlias alias="zdryZdrylbb" type="com.founder.zdry.bean.ZdryZdrylbb" />
	
	<!-- 查询列表 -->
	<select id="queryCount" parameterClass="Map" resultClass="Integer">
		<![CDATA[ select count(*) from ZDRY_ZDRYLBB t where XT_ZXBZ = '0' and ZDRYID = #zdryZdrylbb.zdryid# ]]>
		<isNotEmpty prepend="and" property="zdryZdrylbb.zdrylbdm">
				zdrylbdm = #zdryZdrylbb.zdrylbdm#
			</isNotEmpty>
	</select>
	<select id="queryList" parameterClass="Map" resultClass="zdryZdrylbb">
		<![CDATA[ select * from ( select rownum r ,m.* from (
			select * from ZDRY_ZDRYLBB t where t.XT_ZXBZ = '0' and ZDRYID = #zdryZdrylbb.zdryid# ]]>
			<isNotEmpty prepend="and" property="zdryZdrylbb.zdrylbdm">
				zdrylbdm = #zdryZdrylbb.zdrylbdm#
			</isNotEmpty>
			<![CDATA[ order by $sort$ $order$) m  
		where rownum <= #end# ) where r > #begin# ]]>
	</select>

	<!-- 查询显示列表 -->
	<select id="queryViewList" parameterClass="Map" resultClass="zdryZdrylbb">
		<![CDATA[ select * from (
			select * from ZDRY_ZDRYLBB t where t.XT_ZXBZ = '0' and ZDRYID = #zdryid# ]]>
			<![CDATA[ order by XT_ZHXGSJ desc) m where rownum <= #maxNum# ]]>
	</select>

	<!-- 查询单条（根据主键） -->
	<select id="queryById" parameterClass="String" resultClass="zdryZdrylbb">
		<![CDATA[ select * from ZDRY_ZDRYLBB t where ID = #id# and XT_ZXBZ = '0' and rownum = 1 ]]>
	</select>
	
	<!-- 查询单条（根据Zdryid） -->
	<select id="queryByZdryid" parameterClass="String" resultClass="zdryZdrylbb">
		<![CDATA[ select * from ZDRY_ZDRYLBB t where zdryid = #value# and XT_ZXBZ = '0' ]]>
	</select>
	
	<!-- 查询单条（根据Zdrylbdm） -->
	<select id="queryByZdrylbdm" parameterClass="String" resultClass="zdryZdrylbb">
		<![CDATA[ select * from ZDRY_ZDRYLBB t where zdrylbdm = #value# and XT_ZXBZ = '0' and rownum = 1 ]]>
	</select>
	

	<!-- 新增 -->
	<insert id="save" parameterClass="zdryZdrylbb">
		<![CDATA[ insert into ZDRY_ZDRYLBB (ID,ZDRYID,zdrylbdm, ]]><include refid="insertXtzd"/>)
		<![CDATA[ values (#id#,#zdryid#,#zdrylbdm#,]]><include refid="insertXtzdVal"/>)
	</insert>
	
	<!-- 更新 -->
	<update id="update" parameterClass="zdryZdrylbb">
		<![CDATA[ update ZDRY_ZDRYLBB ]]>	
		<dynamic prepend="set">
			<isNotNull prepend="," property="zdryid"><![CDATA[ zdryid=#zdryid# ]]></isNotNull>
			<isNotNull prepend="," property="zdrylbdm"><![CDATA[ zdrylbdm=#zdrylbdm# ]]></isNotNull>
			,<include refid="updateXtzd"/>				
		</dynamic>
		<![CDATA[ where ID = #id#]]>	
	</update>
	
	<!-- 注销 -->
	<update id="delete" parameterClass="zdryZdrylbb">
		<![CDATA[ update ZDRY_ZDRYLBB set ]]><include refid="deleteXtzd"/><![CDATA[ where ID = #id# ]]>	
	</update>
	
		<!-- 根据重点人员ID注销 -->
	<update id="deleteByZdryid" parameterClass="zdryZdrylbb">
		<![CDATA[ update ZDRY_ZDRYLBB set ]]><include refid="deleteXtzd"/><![CDATA[ where ZDRYID = #zdryid# ]]>	
	</update>

</sqlMap>