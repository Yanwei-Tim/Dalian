		<isNotNull prepend="," property="cglx"><![CDATA[ cglx=#cglx#]]></isNotNull>
		<isNotNull prepend="," property="zgbm"><![CDATA[ zgbm=#zgbm#]]></isNotNull>
		<isNotNull prepend="," property="bz"><![CDATA[ bz=#bz#]]></isNotNull>,
